        while (list.Count <= reqNum)
        {
            int thisNum = rn.Next(1, totalChQNum);
            bool match = false;
            for (int j = 0; j < list.Count; j++)
            {
                if (list[j] == thisNum)
                {
                    match = true;
                    break;
                }
            }
            if (!match)
            {
                list.Add(thisNum);
            }
        }
        numList = list;


        List<int> SortedList = new List<int>();
        SortedList = numList.OrderBy(x => x).ToList();
        numList = SortedList;
        for (int i = 0; i < numList.Count; i++)
        {
